@model NewsSite.WebUi.ViewModel.RegisterViewModel
@{
    Layout = "_Layout";
}


<h2>Register New User</h2>
<hr />
<div class="row">
    <div class="col-lg-6">
        <form method="post" asp-controller="Account" asp-action="Register">
            <div asp-validation-summary="ModelOnly"></div>
            <div>
                <div class="form-group">
                    <input asp-for="Email" class="form-control" placeholder="Email" />
                    <span asp-validation-for="Email"></span>
                </div>
            </div>
           
            <div>
                <div class="form-group">
                    <input asp-for="Password" class="form-control" placeholder="Password" />
                    <span asp-validation-for="Password"></span>
                </div>
            </div>
            <div>
                <div class="form-group">
                    <input asp-for="PasswordConfirm" class="form-control" placeholder="ConfirmPassword" />
                    <span asp-validation-for="PasswordConfirm"></span>
                </div>
            </div>
            <div>
                <input type="submit" value="Регистрация" class="btn btn-lg btn-success btn-block" />

            </div>
        </form>
    </div>
</div>


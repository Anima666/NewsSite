@model NewsSite.Domain.Entities.Post

@{
    ViewData["Title"] = "ShowPost";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div>
    <!-- Title -->
    <h1 class="mt-4">@Model.Title</h1>
    <!-- Author -->
    <p class="lead">
        by
        <a href="#">Start Bootstrap</a>
    </p>

    <hr>

    <!-- Date/Time -->
    @*<p>Posted on January 1, 2018 at 12:00 PM</p>*@
    <p>Posted on @Model.DateChanged.ToString("MMMM' 'dd', 'yyyy' at 'hh':'mm' '") </p> 


    <hr>

    <!-- Preview Image -->
    <img class="img-fluid rounded" src="http://placehold.it/900x300" alt="">

    <hr>

    <!-- Post Content -->
    <p class="lead"><markdown markdown="@Model.Text" /></p>


    <hr>

</div>
<div>
    <a asp-controller="Admin" asp-action="Edit" asp-route-PostId="@Model.PostId">Edit</a> |
    <a asp-action="List">Back to List</a>
</div>

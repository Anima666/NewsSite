<!-- Search Widget -->
<div class="card my-4">
    <h5 class="card-header">@Localizer["Search"]</h5>
    <div class="card-body">
        <div class="input-group">
            <input type="text" class="form-control" placeholder="Search for...">
            <span class="input-group-btn">
                <button class="btn btn-secondary" type="button">Go!</button>
            </span>
        </div>
    </div>
</div>

<!-- Categories Widget -->
<div class="card my-4">
    <h5 class="card-header">@Localizer["Categories"]</h5>
    <div class="card-body">
        <div class="row">
            <div class="col-lg-6">
                <ul class="list-unstyled mb-0">
                    @*@for (int i = 0; i < Model.Count() / 2; i++)
                        {
                            <li><a asp-controller="Post" asp-action="List" asp-route-tag=@link asp-route-page="1">@link</a></li>
                        }*@

                    @foreach (var link in Model)
                    {
                        <li><a asp-controller="Post" asp-action="List" asp-route-tag=@link asp-route-page="1">@link</a></li>
                    }

                </ul>
            </div>
            <div class="col-lg-6">
                <ul class="list-unstyled mb-0">
                    @*@foreach (var link in Model.Skip(Model.Count() / 2))
                        {
                            <li><a asp-controller="Post" asp-action="List" asp-route-tag=@link asp-route-page="1">@link</a></li>
                        }*@
                </ul>
            </div>
        </div>
    </div>
</div>

<!-- Side Widget -->
<div class="card my-4">
    <h5 class="card-header">Side Widget</h5>
    <div class="card-body">
        You can put anything you want inside of these side widgets. They are easy to use, and feature the new Bootstrap 4 card containers!
